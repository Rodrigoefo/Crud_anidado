<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Número de productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category%></td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Show', category, class: "btn btn-info text-light" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-secondary text-light" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoría', new_category_path %>
